    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: App",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": ["src.api.main:app", "--reload"],
            "justMyCode": true
        },
        {
            "name": "Python: Tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "purpose": ["debug-test"],
            "console": "integratedTerminal",
            "env": {"PYTEST_ADDOPTS": "--no-cov"}
        }
    ]
}